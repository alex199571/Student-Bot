[Unit]
Description=Telegram AI Student Bot (FastAPI webhook)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/student-bot
EnvironmentFile=/opt/student-bot/token.env
ExecStart=/opt/student-bot/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3
TimeoutStopSec=30
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
